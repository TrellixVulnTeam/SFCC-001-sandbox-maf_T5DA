function element_scroll_focus(element){
  $('html, body').animate({
    scrollTop: $(element).offset().top-200
  });
  $(element).focus();
}
function maf_addToCart(){
  $('.add-to-cart').click();
  $('html, body').animate({
    scrollTop: $('.minicart-link').offset().top-200
  });
  $('.minicart-link, .minicart-icon').click();

}
</script>